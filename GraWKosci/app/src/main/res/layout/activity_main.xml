<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5DC"
    tools:context=".MainActivity">

    <TextView
        android:text="Gra w koÅ›ci. Autor : 2137"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:background="#A52A2A"
        android:layout_marginTop="10dp"
        />

    <Button
        android:id="@+id/rzuc_koscmi_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#D2691E"
        android:text="RZUC KOSCMI"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        app:cornerRadius="10dp"/>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/kosc_pierwsza"
            android:src="@drawable/question"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_margin="9dp"/>

        <ImageView
            android:id="@+id/kosc_druga"
            android:src="@drawable/question"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_margin="9dp"/>

        <ImageView
            android:id="@+id/kosc_trzecia"
            android:src="@drawable/question"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_margin="9dp"/>

        <ImageView
            android:id="@+id/kosc_czwarta"
            android:src="@drawable/question"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_margin="9dp"/>

        <ImageView
            android:id="@+id/kosc_piata"
            android:src="@drawable/question"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_margin="9dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/wynik_losowania"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Wynik tego losowania : "/>

    <TextView
        android:id="@+id/wynik_gry"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Wynik gry : "/>

    <Button
        android:id="@+id/resetuj_wynik_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#D2691E"
        android:text="RESETUJ WYNIK"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        app:cornerRadius="10dp"/>

</LinearLayout>